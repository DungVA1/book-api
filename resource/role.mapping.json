{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "vietnamese_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "autocomplete_filter",
            "lowercase",
            "icu_folding"
          ]
        },
        "standard_analyzer": {
          "type": "custom",
          "tokenizer": "lowercase",
          "filter": [
            "icu_folding"
          ]
        }
      }
    }
  },
  "mappings": {
    "role": {
      "properties": {
        "name": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "user": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "text",
              "fields": {
                "raw": {
                  "type": "keyword"
                }
              }
            },
            "email": {
              "type": "text",
              "fields": {
                "raw": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "createdAt": {
          "type": "date"
        },
        "updatedAt": {
          "type": "keyword"
        }
      }
    }
  }
}