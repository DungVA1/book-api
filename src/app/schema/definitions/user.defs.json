{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://blog-js.com/user.defs#",
  "additionalProperties": false,
  "definitions": {
    "user": {
      "type": "object",
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "description": "The account or email of user",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "email": {
          "description": "The account or email of user",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      }
    }
  }
}